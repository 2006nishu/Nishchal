import random

def zombie_game():
    print("\nğŸ§Ÿâ€â™‚ï¸ Welcome to the Zombie Survival Game! ğŸ§Ÿâ€â™‚ï¸")
    print("The world has been overrun by zombies, and you must survive!")

    health = 100
    weapons = ["Knife"]
    food = 2

    while True:
        print("\n--- Your Stats ---")
        print(f"ğŸ’– Health: {health}")
        print(f"ğŸ”ª Weapons: {', '.join(weapons)}")
        print(f"ğŸ– Food: {food} pieces left")
        
        print("\nChoose an action:")
        print("1ï¸âƒ£ Search for supplies")
        print("2ï¸âƒ£ Fight a zombie")
        print("3ï¸âƒ£ Find a safe place")
        print("4ï¸âƒ£ Eat food to regain health")
        print("5ï¸âƒ£ Quit Game")

        choice = input("\nEnter your choice: ")

        if choice == "1":
            found_item = random.choice(["Gun", "Bat", "Food", "Nothing"])
            if found_item == "Nothing":
                print("ğŸ” You found nothing! Keep searching!")
            elif found_item == "Food":
                food += 1
                print("ğŸ– You found extra food! +1")
            else:
                weapons.append(found_item)
                print(f"âš”ï¸ You found a {found_item}!")

        elif choice == "2":
            if "Gun" in weapons:
                print("ğŸ”« You used your gun and killed the zombie! You're safe.")
            elif "Bat" in weapons or "Knife" in weapons:
                print("âš”ï¸ You fought bravely and killed the zombie but got injured.")
                health -= random.randint(10, 30)
            else:
                print("ğŸ’€ You had no weapons... The zombie bit you!")
                health -= 50

        elif choice == "3":
            print("ğŸ  You found a safe place and rested.")
            health += 10

        elif choice == "4":
            if food > 0:
                food -= 1
                health += 20
                print("ğŸ– You ate some food and regained health!")
            else:
                print("âš ï¸ You have no food left!")

        elif choice == "5":
            print("ğŸšª You quit the game. Stay safe, survivor!")
            break

        else:
            print("âš ï¸ Invalid choice! Try again.")

        if health <= 0:
            print("\nğŸ’€ You died... The zombies got you!")
            break

zombie_game()
